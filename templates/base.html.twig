<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="navbar navbar-dark bg-dark box-shadow">
                <div class="container d-flex justify-content-between">
                    <a href="{{ path('app_homepage') }}" class="navbar-brand d-flex align-items-center">
                        <strong>Pros-Consulte</strong>
                    </a>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a class="btn btn-sm btn-outline-info" href="{{ path('app_logout') }}">
                            Déconnexion
                        </a>
                    {% else  %}
                        <a class="btn btn-sm btn-outline-info" href="{{ path('app_login') }}">
                            Connexion
                        </a>
                    {% endif %}
                   
                </div>
            </div>
        </header>
        
        {% block body %}{% endblock %}
    </body>
</html>
